<!-- Page Footer Begin -->
section(id="foot")
  div.container-fluid.custom-footer-bgcolor
    div.container.pt-5.pb-5
      div.d-flex.justify-content-between.row
        div.col-lg-6.col-md-12.text-left.text-light.pb-3
          h5.font-weight-bolder.custom-text-shadow-1px #{subscribeInfo.headline}
          form.form-inline.mt-2.mt-md-0(action="#", id="subscribeForm", method="GET")
            input.form-control.rounded-0.col-7(type="email", name="subscribemail", id="subscribemail", aria-describedby="emailHelp", placeholder=subscribeInfo.holder, data-toggle="tooltip", data-placement="bottom", title=subscribeInfo.hint, required)
            button.btn.rounded-0.btn-primary(type="submit") #{subscribeInfo.caption}
          small.form-text.text-muted(id="emailHelp")!= subscribeInfo.smalltips
        div.col-lg-6.col-md-12.text-lg-right.text-md-left.text-light.custom-text-shadow-1px.pb-3
          div
            h5.font-weight-bolder #{getintouchInfo.headline}
          div.social_media
            ul.list-inline
              each gitem in getintouchInfo.data
                li.list-inline-item
                  a(href=gitem.href, target="_blank", rel=gitem.ref)
                    i(class= gitem.faicon + " fa-lg text-white")
      hr.bg-dark
      div.d-flex.justify-content-center.row
        div.col.text-center.custom-footer-color
          span #{copyrightsiteInfo.copyright}
            |  
            a.custom-footer-brand(href="/", alt=copyrightsiteInfo.sitename)
              img.d-inline-block.align-top(src="/imgs/bootstrap-solid.svg", width="20", height="20", alt=copyrightsiteInfo.sitename)
              |  
              span #{copyrightsiteInfo.sitename}
            |  
          span #{copyrightsiteInfo.copyrightsuffix}

  <!-- Go to Top -->
  a.js-go-to.u-go-to(href="javascript:;", data-position='{"bottom": 15, "right": 15 }', data-type="fixed", data-offset-top="400",
    data-compensation="#header", data-show-effect="slideInUp", data-hide-effect="slideOutDown")
    span.fa.fa-arrow-up.fa-2x.u-go-to__inner
  <!-- Note: Need to add script part below the body -->
  <!-- End Go to Top -->

  <!-- Ajax Form Response - modalSubscribeResponseDialog Begin -->
  div.modal.fade(id="modalSubscribeResponseDialog", tabindex="-1", role="dialog")
    div.modal-dialog(role="document")
      div.modal-content
        div.modal-header
          h5 #{subscribeInfo.responsetitle}
          button.close(type="button", data-dismiss="modal", aria-label=subscribeInfo.responsebuttoncaption)
            span(aria-hidden="true") &times;
        div.modal-body
          p!= subscribeInfo.responsecontent
        div.modal-footer.justify-content-center
          button.btn.btn-success(type="button",data-dismiss="modal") #{subscribeInfo.responsebuttoncaption}
  <!-- Ajax Form Response - modalSubscribeResponseDialog End -->
<!-- Page Footer End -->
