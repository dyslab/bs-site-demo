extends template1-layout

block header-scripts

block content
  <!-- Part 1 Begin -->
  if pageinfo.part1visible.toUpperCase() == 'TRUE'
    section(id="part1")
      div.container-fluid.custom-title-height.pt-5.pb-5(style="background: url('" + pageinfo.part1background + "')")
        div.container
          div.row.justify-content-center.pt-md-5.pt-3
            div.col.text-center.text-light
              h1.font-weight-bolder.custom-text-shadow-2px #{pageinfo.part1title}
              h5.font-weight-bold.custom-text-shadow-1px #{pageinfo.part1subtitle}
          div.row.justify-content-center.pt-5.pb-5
            div.col-10.col-md-8.col-lg-6
              span.h5.text-light #{pageinfo.part1content}
  <!-- Part 1 End -->

  <!-- Part 2 Begin -->
  if pageinfo.part2visible.toUpperCase() == 'TRUE'
    section(id="part2")
      div.container-fluid.custom-news-bgcolor.pt-5.pb-5
        div.container
          div.row.justify-content-center.pt-3.pb-3
            div.col.text-dark.text-center
              h5.font-weight-bold.custom-text-shadow-1px #{pageinfo.part2data.headline}
          div.row.pt-3.pb-3
            div.col.text-center
              ui.list-inline
                li.list-inline-item
                  i(class=pageinfo.part2data.faicon + " fa-lg custom-news-content-color")
                li.list-inline-item
                  h6.custom-news-content-color #{pageinfo.part2data.date}
          div.row.pt-3.pb-3
            div.col
              span!= pageinfo.part2data.text
          div.row.pt-3.pb-3
            div.col.text-center
              button.btn.btn-primary(type="button", onclick="javascript:history.go(-1);") #{pageinfo.part2backtext}
  <!-- Part 2 End -->

block footer-scripts
