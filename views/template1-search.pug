extends template1-layout

block header-scripts

block content
  <!-- Part 1 Begin -->
  if pageinfo.part1visible.toUpperCase() == 'TRUE'
    section(id="part1")
      div.container-fluid.custom-title-height.pt-5.pb-5(style="background: url('" + pageinfo.part1background + "')")
        div.container
          div.row.justify-content-center.pt-md-5.pt-3
            div.col.text-center.text-light
              h1.font-weight-bolder.custom-text-shadow-2px #{pageinfo.part1title}
              h5.font-weight-bold.custom-text-shadow-1px #{pageinfo.part1subtitle}
          div.row.justify-content-center.pt-5.pb-5
            div.col
              span.h5.text-light!= pageinfo.part1content
  <!-- Part 1 End -->

  <!-- Part 2 Begin -->
  if pageinfo.part2visible.toUpperCase() == 'TRUE'
    section(id="part2")
      div.container-fluid.bg-light.pt-5.pb-5
        div.container
          div.row.justify-content-start
            div.col.text-dark.pt-3.pb-3
              h5.font-weight-bold.custom-text-shadow-1px #{pageinfo.part2title}
        div.container.w-100
          if pageinfo.part2data.length > 0
            each p2item in pageinfo.part2data
              div.row.justify-content-start.pt-3.pb-3
                a.custom-search-link.w-100(href=p2item.href)
                  div.col.border.p-3
                    span.custom-search-result-title!= p2item.title
                    br
                    span.custom-search-result-text!= p2item.text
          else
            div.row.justify-content-start
              div.col.w-100.border.p-3
                span.custom-search-result-title!= pageinfo.noresulttext

  <!-- Part 2 End -->

block footer-scripts
