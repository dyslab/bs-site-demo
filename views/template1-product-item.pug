extends template1-layout

block header-scripts

block content
  <!-- Part 1 Begin -->
  if pageinfo.part1visible.toUpperCase() == 'TRUE'
    section(id="part1")
      div.container-fluid.custom-title-height(style="background: url('" + pageinfo.part1background + "')")
        div.container.h-100.pt-md-5.pt-3.pb-3
          div.row.justify-content-center.pt-md-5.pt-3
            div.col.text-center.text-light
              h1.font-weight-bolder.custom-text-shadow-2px #{pageinfo.part1title}
              h5.font-weight-bold.custom-text-shadow-1px #{pageinfo.part1subtitle}
          div.row.justify-content-center.pt-5.pb-5
            div.col
              span.h5.text-light!= pageinfo.part1content
  <!-- Part 1 End -->

  <!-- Part 2 Begin -->
  if pageinfo.part2visible.toUpperCase() == 'TRUE'
    section(id="part2")
      div.container-fluid.bg-white
        div.container.pt-3.pb-3
          div.row.justify-content-center
            div.col.text-dark.text-center.pt-3.pb-3
              h4.font-weight-bold.custom-text-shadow-1px #{pageinfo.part2title}
        div.container
          div.row.justify-content-center
            div.col-md-6.pt-3.pb-3
              div.w-100
                if pageinfo.part2images.length > 0
                  img.custom-image-box.img-fluid(src=pageinfo.part2images[0])
              div.row.pt-5
                each p2img in pageinfo.part2images
                  div.col-4.col-md-3.p-2
                    button.btn.custom-alter-image.custom-product-cat-link
                      img.custom-thumbnail-img.img-fluid(src=p2img)
            div.col-md-6.p-1.p-md-3
              table.table.table-borderless.table-hover
                tbody
                  each lineitem in pageinfo.part2lines
                    tr
                      td.col-3.text-right #{lineitem.caption}
                      if lineitem.link && lineitem.link != undefined
                        td
                          a.custom-contact-link(href=lineitem.link, target="_blank")!= lineitem.text
                      else
                        td!= lineitem.text
  <!-- Note: Need to add script part below the body -->
  <!-- Part 2 End -->

  <!-- Part 3 Begin -->
  if pageinfo.part3visible.toUpperCase() == 'TRUE'
    section(id="part3")
      div.container-fluid.p-0.bg-white
        div.container.pt-3.pb-3
          div.row.justify-content-center
            div.col.text-dark.text-center.pt-3.pb-3
              h4.font-weight-bold.custom-text-shadow-1px #{pageinfo.part3title}
        div.container-fluid.justify-content-center.p-0
          center
            each p3img in pageinfo.part3images
              img.img-fluid(src=p3img)
  <!-- Part 3 End -->

block footer-scripts
  <!-- Part2/Alter Image Script Begin -->
  script.
    $(document).ready(function() {
      $(".custom-alter-image").click(function () {
        var newimage = $(this).children(".custom-thumbnail-img").attr("src")
        $(".custom-image-box").fadeOut(function () {
          $(".custom-image-box").attr("src", newimage).fadeIn()
        })
      })
    })
  <!-- Part2/Alter Image Script End -->
